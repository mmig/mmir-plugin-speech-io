{
  "name": "mmir-plugin-speech-io",
  "version": "1.0.0",
  "description": "Plugin for the MMIR framework that adds a state-machine for managing speech input/output states",
  "main": "./lib/index.js",
  "types": "./src/index.ts",
  "scripts": {
    "build": "npm run build-ts && npm run copy-dts && npm run copy-js && npm run build-metadata",
    "build-ts": "tsc",
    "copy-dts": "copyfiles -u 1 \"src/**/*.d.ts\" lib",
    "copy-js": "copyfiles -u 1 \"src/**/*.js\" lib",
    "build-metadata": "createplugincompat ./ && pluginexport --ignore-deps ./"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mmig/mmir-plugin-speech-io.git"
  },
  "keywords": [
    "speech",
    "scion",
    "state machine",
    "asr",
    "tts",
    "mmir",
    "plugin"
  ],
  "author": "russa",
  "license": "MIT",
  "dependencies": {
    "rxjs": "^6.0.0"
  },
  "devDependencies": {
    "copyfiles": "^2.1.1",
    "mmir-lib": "git+https://gitlab-cos.b.dfki.de/mmir/dev_mmir-lib.git",
    "mmir-plugin-exports": "^1.2.2",
    "mmir-tooling": "^5.2.0",
    "typescript": "^3.6.4"
  }
}
